gem "sassy-math"

gem "compass", "~> 0.12.2"

# Compass plugins
# gem "compass-h5bp", "~> 0.1.2" # HTML5 Boilerplate styles

# Font Awesome icons
gem "font-awesome-middleman", "~> 4.0.3"

